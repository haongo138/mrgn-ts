{
  "extends": "@mrgnlabs/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "outDir": "dist",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "."],
  "exclude": ["dist", "node_modules", "*.spec.ts"]
}
